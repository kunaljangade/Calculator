<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:minWidth="50dp"
        android:id="@+id/linearLayout">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_weight="1"
            android:text="0"
            android:gravity="center|right" />
    </LinearLayout>

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="BASIC"
            android:id="@+id/btnbasic"
            android:layout_row="0"
            android:layout_column="0" />

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="DEL"
            android:id="@+id/btndel"
            android:layout_row="0"
            android:layout_column="3" />

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="sin()"
            android:id="@+id/btnsin"
            android:layout_row="1"
            android:layout_column="0"
            android:textAllCaps="false"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="cos()"
            android:id="@+id/btncos"
            android:layout_row="1"
            android:layout_column="1"
            android:textAllCaps="false" />

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="tan()"
            android:id="@+id/btntan"
            android:layout_row="1"
            android:layout_column="2"
            android:textAllCaps="false" />

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="i"
            android:id="@+id/btnimaginary"
            android:layout_row="1"
            android:layout_column="3"
            android:textAllCaps="false"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="ln"
            android:id="@+id/btnntrllog"
            android:layout_row="2"
            android:layout_column="0"
            android:textAllCaps="false"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="log"
            android:id="@+id/btnlog"
            android:layout_row="2"
            android:layout_column="1"
            android:textAllCaps="false"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="π"
            android:id="@+id/btnpie"
            android:layout_row="2"
            android:layout_column="2"
            android:textAllCaps="false"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="e"
            android:id="@+id/btne"
            android:layout_row="2"
            android:layout_column="3"
            android:textAllCaps="false"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="%"
            android:id="@+id/btnpercentage"
            android:layout_row="3"
            android:layout_column="0"
            android:textAllCaps="false"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="!"
            android:id="@+id/btnfact"
            android:layout_row="3"
            android:layout_column="1"
            android:textAllCaps="false"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="√"
            android:id="@+id/btnsqrt"
            android:layout_row="3"
            android:layout_column="2"
            android:textAllCaps="false"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="^"
            android:id="@+id/btnexp"
            android:layout_row="3"
            android:layout_column="3"
            android:textAllCaps="false"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="("
            android:id="@+id/btnopenbracket"
            android:layout_row="4"
            android:layout_column="0"
            android:textAllCaps="false"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text=")"
            android:id="@+id/btnclosebracket"
            android:layout_row="4"
            android:layout_column="1"
            android:textAllCaps="false"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/button32"
            android:layout_row="4"
            android:layout_column="2"
            android:textAllCaps="false"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/button33"
            android:layout_row="4"
            android:layout_column="3"
            android:textAllCaps="false"/>

        </GridLayout>


</RelativeLayout>